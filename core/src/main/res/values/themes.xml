<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.LocalGuru" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- ✅ Global status bar color -->
        <item name="android:statusBarColor">@color/colorTextLightBlack</item>

        <!-- ✅ Optional: navigation bar color -->
        <item name="android:navigationBarColor">@color/colorTextLightBlack</item>

        <!-- ✅ Make sure system draws bars -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>
    <style name="TopCornersRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_24sdp</item>
        <item name="cornerSizeTopRight">@dimen/_24sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>
