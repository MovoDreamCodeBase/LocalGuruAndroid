<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="24dp">

        <!-- Avatar (initials) -->
        <TextView
            android:id="@+id/tvAvatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="JD"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:background="@drawable/bg_avatar_gradient"
            android:elevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="@font/dm_sans_bold"
            android:textColor="@color/textPrimary"
            app:layout_constraintStart_toEndOf="@id/tvAvatar"
            app:layout_constraintTop_toTopOf="@id/tvAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" />

        <!-- Role / location -->
        <TextView
            android:id="@+id/tvRole"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Amritsar Data Collector"
            android:textColor="@color/textSecondary"
            android:textSize="16sp"
            app:fontFamily="@font/dm_sans_regular"
            app:layout_constraintStart_toStartOf="@id/tvName"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp"/>

        <!-- Status chip -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textSize="14sp"
            android:textColor="@color/chipText"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            app:fontFamily="@font/dm_sans_medium"
            android:paddingBottom="6dp"
            android:background="@drawable/bg_chip"
            app:layout_constraintStart_toStartOf="@id/tvName"
            app:layout_constraintTop_toBottomOf="@id/tvRole"
            android:layout_marginTop="12dp"/>

        <!-- Stats row -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/statsRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvAvatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_35sdp">

            <!-- Card 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTotal"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardCompleted"
                app:layout_constraintWidth_percent="0.32"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="142"
                        app:fontFamily="@font/dm_sans_bold"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Tasks"
                        android:textAlignment="center"
                        app:fontFamily="@font/dm_sans_medium"
                        android:textSize="13sp"
                        android:textColor="@color/textSecondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCompleted"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/cardTotal"
                app:layout_constraintEnd_toStartOf="@id/cardRating"
                app:layout_constraintTop_toTopOf="@id/cardTotal"
                app:layout_constraintWidth_percent="0.32"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCompleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="128"
                        android:textSize="28sp"
                        app:fontFamily="@font/dm_sans_bold"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        app:fontFamily="@font/dm_sans_medium"
                        android:textSize="13sp"
                        android:textColor="@color/textSecondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRating"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cardTotal"
                app:layout_constraintStart_toEndOf="@id/cardCompleted"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.7"
                        android:textSize="28sp"
                        app:fontFamily="@font/dm_sans_bold"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg.\nRating"
                        android:textAlignment="center"
                        app:fontFamily="@font/dm_sans_medium"
                        android:textSize="13sp"
                        android:textColor="@color/textSecondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="22dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/statsRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="6dp">

                <!-- Reusable row layout (icon + title + chevron) -->
                <!-- 1. Edit Profile -->
                <include
                    layout="@layout/row_menu"
                    android:id="@+id/rowEdit"
                    android:tag="Edit Profile" />

                <View style="@style/DividerStyle"/>
                <!-- 2. Settings -->
                <include
                    layout="@layout/row_menu"
                    android:id="@+id/rowSettings"
                    android:tag="Settings" />

                <View style="@style/DividerStyle"/>
                <!-- 3. Notifications -->
                <include
                    layout="@layout/row_menu"
                    android:id="@+id/rowNotifications"
                    android:tag="Notifications" />

                <View style="@style/DividerStyle"/>
                <!-- 4. Privacy & Security -->
                <include
                    layout="@layout/row_menu"
                    android:id="@+id/rowPrivacy"
                    android:tag="Privacy  Security" />

                <View style="@style/DividerStyle"/>
                <!-- 5. Help & Support -->
                <include
                    layout="@layout/row_menu"
                    android:id="@+id/rowHelp"
                    android:tag="Help Support" />

                <View style="@style/DividerStyle"/>
                <!-- 6. Logout -->
                <include
                    layout="@layout/row_menu"
                    android:id="@+id/rowLogout"
                    android:tag="Logout" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>