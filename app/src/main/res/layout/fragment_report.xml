<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/dm_sans_bold"
                android:textStyle="bold"
                android:textSize="@dimen/_13ssp"
                android:text="@string/local_agent_performance_report"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_10sdp"/>

            <!-- Weekly Card -->
            <include layout="@layout/layout_report_card_weekly" />

            <!-- Monthly Card -->
            <include layout="@layout/layout_report_card_monthly" />

            <!-- Quality Metrics Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:strokeWidth="0dp"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardElevation="@dimen/_2sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardBackgroundColor="@color/white"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quality Metrics"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            android:layout_margin="20dp"
                            app:fontFamily="@font/dm_sans_bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last 30 Days"
                            app:fontFamily="@font/dm_sans_bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textSize="12sp"
                            android:layout_margin="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorGrey"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Data Accuracy -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="6dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="Data Accuracy"
                            android:textColor="@color/colorTextLightBlack"
                            android:textSize="@dimen/_10ssp"
                            app:fontFamily="@font/dm_sans_regular"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="94%"
                            android:layout_marginEnd="@dimen/_20sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textColor="@color/colorTextLightBlack"
                            android:textSize="@dimen/_10ssp"
                            app:fontFamily="@font/dm_sans_regular"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progDataAcc"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        app:indicatorSize="8dp"
                        app:trackCornerRadius="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        app:indicatorColor="@color/colorGreen"
                        android:progress="94" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="10dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="Photo Quality"
                            android:textColor="@color/colorTextLightBlack"
                            android:textSize="@dimen/_10ssp"
                            app:fontFamily="@font/dm_sans_regular"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="88%"
                            android:layout_marginEnd="@dimen/_20sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textColor="@color/colorTextLightBlack"
                            android:textSize="@dimen/_10ssp"
                            app:fontFamily="@font/dm_sans_regular"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        app:indicatorSize="8dp"
                        app:trackCornerRadius="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        app:indicatorColor="@color/colorSkyBlue"
                        android:progress="88" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="10dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="On-time Completion"
                            android:textColor="@color/colorTextLightBlack"
                            android:textSize="@dimen/_10ssp"
                            app:fontFamily="@font/dm_sans_regular"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="96%"
                            android:layout_marginEnd="@dimen/_20sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textColor="@color/colorTextLightBlack"
                            android:textSize="@dimen/_10ssp"
                            app:fontFamily="@font/dm_sans_regular"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progOnTime"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        app:indicatorSize="8dp"
                        app:trackCornerRadius="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_20sdp"

                        app:indicatorColor="@color/colorGreen"
                        android:progress="96" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_btn_primary"
                        android:layout_width="match_parent"
                        app:strokeWidth="0dp"
                        android:layout_marginHorizontal="@dimen/_2sdp"
                        app:cardCornerRadius="@dimen/_6sdp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_15sdp" >

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:background="@color/colorSkyBlue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_gravity="center"
                                android:layout_width="@dimen/_16ssp"
                                app:srcCompat="@drawable/outline_arrow_outward_24"
                                android:layout_height="@dimen/_16sdp"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:text="View Detailed Analytics"
                                android:fontFamily="@font/dm_sans_bold"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>