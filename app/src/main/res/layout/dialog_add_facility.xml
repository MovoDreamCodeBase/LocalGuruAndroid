<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ========================= -->
        <!-- TITLE -->
        <!-- ========================= -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Facility"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/dm_sans_bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp" />

        <!-- ========================= -->
        <!-- LABEL -->
        <!-- ========================= -->
        <EditText
            android:id="@+id/etLabel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Label (e.g. Main Parking or Washroom)"
            android:background="@drawable/bg_input_bordered"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColorHint="@color/colorGrey"
            android:textColor="@color/black"
            android:fontFamily="@font/dm_sans_regular"
            android:maxLength="50"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_marginBottom="12dp" />

        <!-- ========================= -->
        <!-- DESCRIPTION -->
        <!-- ========================= -->
        <EditText
            android:id="@+id/etDesc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Description"
            android:background="@drawable/bg_input_bordered"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColorHint="@color/colorGrey"
            android:textColor="@color/black"
            android:fontFamily="@font/dm_sans_regular"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:maxLength="300"
            android:layout_marginBottom="12dp" />

        <!-- ========================= -->
        <!-- PICK LOCATION -->
        <!-- ========================= -->
        <TextView
            android:id="@+id/tvPickLocation"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Pick Location"
            android:textSize="14sp"
            android:fontFamily="@font/dm_sans_medium"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_input_bordered"
            android:layout_marginBottom="12dp" />

        <!-- ========================= -->
        <!-- LANDMARK -->
        <!-- ========================= -->
        <EditText
            android:id="@+id/etLandmark"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nearby Landmark"
            android:background="@drawable/bg_input_bordered"
            android:padding="12dp"
            android:textSize="14sp"
            android:fontFamily="@font/dm_sans_regular"
            android:maxLength="200"
            android:singleLine="true"
            android:textColorHint="@color/colorGrey"
            android:textColor="@color/black"
            android:imeOptions="actionDone"
            android:layout_marginBottom="16dp" />

        <!-- ========================= -->
        <!-- ACTION BUTTONS -->
        <!-- ========================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="14sp"
                android:fontFamily="@font/dm_sans_medium"
                android:textColor="@android:color/black"
                android:padding="12dp" />

            <TextView
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/dm_sans_medium"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_pink"
                android:paddingVertical="8dp"
                android:paddingHorizontal="24dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
