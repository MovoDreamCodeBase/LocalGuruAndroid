<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp"
        >

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select days and time"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:fontFamily="@font/dm_sans_bold"
            android:textColor="@android:color/black"
            android:paddingBottom="@dimen/_12sdp"/>

        <!-- Day chips -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/dayChips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            android:paddingBottom="@dimen/_12sdp"/>

        <!-- Radio options -->
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:fontFamily="@font/dm_sans_regular"
                android:id="@+id/rbClosed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closed"/>

            <RadioButton
                android:fontFamily="@font/dm_sans_regular"
                android:id="@+id/rb24Hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open 24 hours"/>

            <RadioButton
                android:fontFamily="@font/dm_sans_regular"
                android:id="@+id/rbCustom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom hours"/>
        </RadioGroup>

        <!-- Slot container -->
        <LinearLayout
            android:id="@+id/slotContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_12sdp"/>

        <!-- Add hours -->
        <TextView
            android:id="@+id/btnAddSlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add hours"
            android:fontFamily="@font/dm_sans_bold"
            android:textColor="@color/colorPrimary"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_12sdp"/>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:fontFamily="@font/dm_sans_medium"
                android:textColor="@android:color/black"
                android:padding="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"

                android:background="@drawable/bg_button_pink"
                android:fontFamily="@font/dm_sans_medium"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingVertical="@dimen/_6sdp"
                android:paddingHorizontal="@dimen/_24sdp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
