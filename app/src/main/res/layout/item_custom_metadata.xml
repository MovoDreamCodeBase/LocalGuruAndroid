<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_background"
    android:padding="@dimen/_16sdp"
    android:layout_marginBottom="@dimen/_12sdp">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Field"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/dm_sans_bold"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_delete"
            android:contentDescription="Delete field" />
    </RelativeLayout>

    <!-- Field Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Field Label"
        android:fontFamily="@font/dm_sans_medium"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/colorTextLightBlack"
        android:layout_marginTop="@dimen/_12sdp" />

    <EditText
        android:layout_marginTop="@dimen/_2sdp"
        android:id="@+id/etLabel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/bg_input_bordered"
        android:hint="Enter field label"
        android:paddingHorizontal="@dimen/_12sdp"
        android:inputType="text"
        android:fontFamily="@font/dm_sans_medium"
        android:maxLines="1"
        android:textSize="14sp" />

    <!-- Field Type -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Field Type"

        android:fontFamily="@font/dm_sans_medium"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/colorTextLightBlack"
        android:layout_marginTop="@dimen/_12sdp" />

    <Spinner
        android:id="@+id/spType"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/bg_input_bordered"
        android:paddingHorizontal="@dimen/_12sdp" />

    <!-- Value -->
    <TextView
        android:id="@+id/tvValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value"
        android:fontFamily="@font/dm_sans_medium"
        android:textSize="@dimen/_12ssp"

        android:textColor="@color/colorTextLightBlack"
        android:layout_marginTop="@dimen/_12sdp" />

    <FrameLayout
        android:id="@+id/valueContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp" />

</LinearLayout>
