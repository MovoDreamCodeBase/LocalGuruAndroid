<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="TabButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:background">@drawable/tab_button_selector</item>
        <item name="android:textColor">@color/tab_text_selector</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:minHeight">@dimen/_32sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>